rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¹ User-specific prayers (The Vault)
    match /users/{userId}/prayers/{prayerId} {
      // Only the authenticated owner can read their prayers
      allow read: if request.auth != null && request.auth.uid == userId;

      // Writes must come from the authenticated owner and must include the correct ownerId
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.ownerId == userId;

      allow update, delete: if request.auth != null
                            && request.auth.uid == userId
                            && resource.data.ownerId == userId;
    }

    // ðŸ”¹ Public prayers (Community Wall)
    match /publicPrayers/{prayerId} {
      // Anyone can read public prayers
      allow read: if true;

      // Creation: authenticated user may create a public prayer only if ownerId matches their UID
      allow create: if request.auth != null
                    && request.auth.uid == request.resource.data.ownerId;

      // Updates/deletes: only allowed if the requester is the recorded owner
      allow update, delete: if request.auth != null
                            && request.auth.uid == resource.data.ownerId;
    }

    // ðŸ”¹ Reflections (The Ink)
    match /users/{userId}/reflections/{reflectionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸ”¹ Affirmations (The Echo)
    match /users/{userId}/affirmations/{affirmationId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸ”¹ Resources (The Library) â€” global, read-only
    match /resources/{resourceId} {
      allow read: if true; // anyone can access resources
      allow write: if false; // prevent client-side writes
    }

    // ðŸ”¹ Counselor (The Oracle) â€” private conversations
    match /users/{userId}/counselorSessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
